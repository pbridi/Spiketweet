<div class="timeline">
    <% @search['results'].each do |result| %>
        <p>
            <div style="float:left; margin:5px">
                <a href="http://twitter.com/<%= result['from_user'] %>">
                	<% if result['profile_image_url'] != "http://static.twitter.com/images/default_profile_normal.png" %>
                    	<img src="<%= result['profile_image_url'] %>" width="48" height="48"/>
                	<% end %>
                </a>
            </div>
            <div style="">
                <a href="http://twitter.com/<%= result['from_user'] %>">@<%= result['from_user'] %></a>
                <%= result['text'] %>
            </div>
            <br clear="all"/>
        </p>
    <% end %>
</div>